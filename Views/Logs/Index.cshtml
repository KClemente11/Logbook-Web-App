@model IEnumerable<Logbook_Web_App.Models.Log>

@{
    ViewData["Title"] = "Index";
}

<h1 class="logs-title">Index</h1>

<p>
    <a asp-action="Create">Add New Log</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LogTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LogTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LogDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
